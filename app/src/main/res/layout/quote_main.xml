<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.QuoteActivity">

    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Hello World!"
            android:singleLine="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textView_quotes"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editText_quotes"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Quotes"
            android:ems="10"
            android:id="@+id/editText_quotes"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/button_add"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button_add" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/textView_quotes"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Author"
            android:ems="10"
            android:id="@+id/editText_author" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_quotes"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintEnd_toEndOf="@+id/editText_quotes"
            app:layout_constraintStart_toStartOf="@+id/editText_quotes"/>
    <Button
            android:text="Add to quotes"
            android:layout_width="wrap_content"
            android:layout_height="107dp"
            android:id="@+id/button_add" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>